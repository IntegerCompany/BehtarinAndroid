<resources xmlns:tools="http://schemas.android.com/tools">

        <!-- Base application theme. -->
        <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">

                <item name="colorPrimary">@color/base_text</item>
                <item name="colorPrimaryDark">#FF5D5D5D</item>
                <item name="colorAccent">@color/base_gold</item>
                <item name="android:textColor">@color/base_text</item>
                <item name="android:editTextColor">@color/base_text</item>
                <item name="android:textColorHint">@color/base_hint</item>
                <item name="android:textColorSecondary">@color/base_black</item>
                <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
                <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        </style>


        <style name="date_picker" parent="@android:style/Widget.DeviceDefault.DatePicker">
                <item name="android:divider">@drawable/mastercard</item>
        </style>

        <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
                <item name="android:textColor">@color/base_black</item>
        </style>

        <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Dialog">
                <item name="android:colorAccent">@color/base_gold</item>

        </style>

        <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
                <item name="android:calendarTextColor">@color/base_black</item>
        </style>

        <style name="CustomCheckBox">
                <item name="android:theme">@style/CheckBoxAppTheme</item>
        </style>

        <style name="CheckBoxAppTheme">
                <item name="android:colorAccent">@color/base_gold</item>
                <item name="android:colorControlNormal">@color/base_gold</item>
                <item name="android:colorControlHighlight">@color/base_gold</item>

                <item name="colorAccent">@color/base_gold</item>
                <item name="colorControlNormal">@color/base_gold</item>
                <item name="colorControlHighlight">@color/base_gold</item>
        </style>

</resources>
