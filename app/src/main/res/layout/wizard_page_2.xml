<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_white"
        android:padding="16dp"
        >
        <com.gc.materialdesign.views.ButtonFlat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your credit card info"
            android:id="@+id/wizardExpandButton" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wizardExpandableContainer"
            android:layout_marginTop="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/etWizardCreditCardNumber"
                android:textColor="@color/base_text"
                android:hint="Credit card number" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/etWizardCreditCardIdentifier"
                android:textColor="@color/base_text"
                android:layout_marginTop="8dp"
                android:hint="Credit card identifier" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/etWizardCreditCardExpirationMonth"
                android:textColor="@color/base_text"
                android:layout_marginTop="8dp"
                android:hint="Credit card expiration month" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/etWizardCreditCardExpirationYear"
                android:textColor="@color/base_text"
                android:layout_marginTop="8dp"
                android:hint="Credit card expiration year" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>