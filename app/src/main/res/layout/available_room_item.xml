<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hotel_images_height"
            android:id="@+id/room_image"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/tvRoomDescription"
                        android:textColor="@color/base_black"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/imageView3"
                            android:src="@drawable/ic_gps"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Medium Text"
                            android:id="@+id/tvLocation"
                            android:textSize="14dp"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="right">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="$999"
                            android:id="@+id/tvOldPrice"
                            android:textSize="14sp"
                            android:layout_gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="$999"
                            android:id="@+id/tvNewPrice"
                            android:textColor="@color/base_black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_gravity="right" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="/1 night"
                        android:id="@+id/textView7"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:id="@+id/imageView4"
                        android:src="@drawable/ic_men" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="x9"
                        android:id="@+id/tvMaxGuests"
                        android:layout_gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:id="@+id/imageView5"
                        android:src="@drawable/ic_bed"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="x9"
                        android:id="@+id/tvBedsQuantity"
                        android:layout_gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="99 twin beds"
                    android:id="@+id/tvBedsTypes"
                    android:layout_weight="3"
                    android:textSize="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btnBook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/base_yellow"
                    android:text="BOOK"

                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textColor="@color/base_black" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>