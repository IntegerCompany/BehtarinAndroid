<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:padding="16dp">


    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/imageView4"
        android:background="@drawable/adult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView5"
        android:layout_toRightOf="@+id/imageView4" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/imageView3"
        android:layout_toRightOf="@+id/textView5"
        android:background="@drawable/child" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView6"
        android:layout_toRightOf="@+id/imageView3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:background="@color/base_grey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="false"
        android:background="@drawable/adult" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView7"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView6" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/btn_minus_fragment_room_builder"
        android:layout_below="@+id/imageView5"
        android:layout_toLeftOf="@+id/tv_adults_fragment_room_builder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/tv_adults_fragment_room_builder"
        android:layout_below="@+id/imageView5"
        android:layout_toLeftOf="@+id/btn_plus_fragment_room_builder" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/btn_plus_fragment_room_builder"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_add_child_fragment_room_builder"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_children_fragment_room_builder"
        android:layout_below="@+id/imageView7"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:layout_below="@+id/lv_children_fragment_room_builder" />
</RelativeLayout>