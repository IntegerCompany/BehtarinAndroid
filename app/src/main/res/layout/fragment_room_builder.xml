<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container_titles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageView4"
            android:background="@drawable/adult"
            android:layout_marginRight="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x 1"
            android:id="@+id/tv_title_adults_fragment_room_builder"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageView3"
            android:layout_toRightOf="@+id/tv_title_adults_fragment_room_builder"
            android:background="@drawable/child"
            android:layout_marginRight="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x 0"
            android:id="@+id/tv_title_children_fragment_room_builder"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_gravity="center_vertical"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/imageView5"
        android:background="@color/base_grey"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/container_titles"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:id="@+id/container_adults"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageView6"
            android:layout_alignParentRight="false"
            android:background="@drawable/adult" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btn_minus_fragment_room_builder"
            android:layout_toLeftOf="@+id/tv_adults_fragment_room_builder"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@null"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/tv_adults_fragment_room_builder"
            android:layout_toLeftOf="@+id/btn_plus_fragment_room_builder"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btn_plus_fragment_room_builder"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@android:drawable/ic_menu_add"
            android:padding="12dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/imageView7"
        android:layout_marginTop="16dp"
        android:background="@color/base_grey"
        android:layout_below="@+id/container_adults"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add child"
        android:id="@+id/btn_add_child_fragment_room_builder"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/base_gold"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_children_fragment_room_builder"
        android:layout_below="@+id/imageView7"
        android:layout_above="@+id/btn_add_child_fragment_room_builder"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

</RelativeLayout>