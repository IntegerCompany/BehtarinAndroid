<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/credit_card_background"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"

            android:id="@+id/btnDeleteCreditCard"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/close"
            android:padding="14dp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:id="@+id/cardTypeImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/mastercard_logo"
            android:scaleType="fitCenter"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="left|top"
            android:text="11** **** **** 1111"
            android:textColor="@color/base_white"
            android:textStyle="bold"
            android:id="@+id/tvCreditCardNumber"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_below="@+id/btnDeleteCreditCard"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:background="#000000" />

    </RelativeLayout>

</FrameLayout>