<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_where_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_where_search_activity" />

    <EditText
        android:id="@+id/et_location_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London" />

    <TextView
        android:id="@+id/text_check_in_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/text_check_in" />

    <TextView
        android:id="@+id/tv_check_in_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="09/10/2015" />

    <TextView
        android:id="@+id/text_check_out_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_check_out" />

    <TextView
        android:id="@+id/tv_check_out_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09/11/2015" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_room_search_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_room" />

        <EditText
            android:id="@+id/et_room_search_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" />

        <TextView
            android:id="@+id/text_adult_search_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_adult" />

        <EditText
            android:id="@+id/et_adult_search_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" />

        <TextView
            android:id="@+id/text_children_search_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_children" />

        <EditText
            android:id="@+id/et_children_search_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" />

    </LinearLayout>

    <com.edmodo.rangebar.RangeBar
        android:id="@+id/rb_stars"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:indeterminate="false" />

    <Button
        android:id="@+id/btn_search_for_hotels_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_search_for_hotels" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textSize="8sp" />
    </ScrollView>
</LinearLayout>